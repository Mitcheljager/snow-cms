<h1 class="title title--main">Pages</h1>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="media-items">

  <h2 class="title media-items__title">Main Menu</h2>
  <div class="sortable">
    <% @main_menu_pages.each do |page| %>
      <%= render page %>
    <% end %>
  </div>

  <h2 class="title media-items__title">Footer Menu</h2>
  <div class="sortable">
    <% @footer_pages.each do |page| %>
      <%= render page %>
    <% end %>
  </div>
</div>

<%= link_to 'New page', new_page_path, :class=>'btn' %>
